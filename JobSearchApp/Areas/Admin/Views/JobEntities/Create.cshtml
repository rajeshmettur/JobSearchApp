@model JobSearchApp.Models.ViewModel.JobViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>JobEntity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.JobEntity.Title" class="control-label"></label>
                <input asp-for="@Model.JobEntity.Title" class="form-control" />
                <span asp-validation-for="@Model.JobEntity.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.JobEntity.Description" class="control-label"></label>
                @Html.TextAreaFor(m => m.JobEntity.Description)
                <span asp-validation-for="@Model.JobEntity.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.JobEntity.CompanyId" class="control-label"></label>
                @Html.DropDownListFor(m => m.JobEntity.CompanyId, Model.CompanyList,
                                           "- Please select a Company-", new { @class = "form-control" })
                <span asp-validation-for="@Model.JobEntity.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.JobEntity.Salary" class="control-label"></label>
                <input asp-for="@Model.JobEntity.Salary" class="form-control" />
                <span asp-validation-for="@Model.JobEntity.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.JobEntity.Location" class="control-label"></label>
                <input asp-for="@Model.JobEntity.Location" class="form-control" />
                <span asp-validation-for="@Model.JobEntity.Location" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="@Model.JobEntity.Time" class="control-label"></label>
                <input asp-for="@Model.JobEntity.Time" class="form-control" />
                <span asp-validation-for="@Model.JobEntity.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

